{% extends 'base.html.twig' %}

{% block title %}Admin area: Client data{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Clients data</h1>
    <div>

    </div>
    {% if data|length %}
    <table>
        <tr>
            {% for key, item in data[0] %}
            <th>{{ key }}</th>
            {% endfor %}
        </tr>
        {% for item in data %}
        <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.firstName }}</td>
            <td>{{ item.lastName }}</td>
            <td><img src="{{ vich_uploader_asset(item, 'file') }}" height="100"/></td>
        </tr>
        {% endfor %}
    </table>
    {% else %}
    <p>No clients found.</p>
    {% endif %}
    <p>Back to <a href="{{ url('default') }}">Homepage</a></p>
</div>
{% endblock %}
